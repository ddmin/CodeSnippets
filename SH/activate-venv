# source this from bash
activate-venv () {
    venv_dir="$HOME/.local/drive/code/venv"
    venv=`find $venv_dir -maxdepth 1 -mindepth 1 -type d |\
        tr '\n' '\0' |\
        xargs -0 -n 1 basename |\
        rofi -dmenu -p "venv" 2> /dev/null`

    [[ -z $venv ]] && return 1

    source "$venv_dir/$venv/bin/activate"
}
